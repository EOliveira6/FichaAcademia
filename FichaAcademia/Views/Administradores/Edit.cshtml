@model FichaAcademia.Dominio.Models.Administrador
@{
    ViewData["Title"] = "Atualizar " + Model.Nome;
}

<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="collection with-header">
                <h6 class="collection-header">Atualizar @Model.Nome</h6>
                <form asp-action="Edit">
                    <div class="collection-item">
                        <div asp-validation-summary="ModelOnly" class="red-text darken-3"></div>
                        <input type="hidden" asp-for="AdministradorId" />
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Nome" class="validate" id="Nome" />
                                <label for="Nome">Nome</label>
                                <span asp-validation-for="Nome" class="red-text darken-3"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Email" class="validate" id="Email" />
                                <label for="Email">Email</label>
                                <span asp-validation-for="Email" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Senha" class="validate" id="Senha" />
                                <label for="Senha">Senha</label>
                                <span asp-validation-for="Senha" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="collection-item">
                            <input type="submit" value="Atualizar" class="btn-small light-blue darken-3" /> &nbsp;
                            <a asp-action="Login" class="btn-small grey darken-1">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}